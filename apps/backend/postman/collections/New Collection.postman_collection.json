              "if (!secret) {\r",
              "  throw new Error(\"‚ùå WEBHOOK_SECRET is missing in Postman environment\");\r",
              "}\r",
              "\r",
              "const body = pm.request.body.raw;\r",
              "const crypto = require(\"crypto\");\r",
              "\r",
              "const signature = crypto\r",
              "  .createHmac(\"sha256\", secret)\r",
              "  .update(body)\r",
              "  .digest(\"hex\");\r",
              "\r",
              "pm.request.headers.upsert({\r",
              "  key: \"x-webhook-signature\",\r",
              "  value: signature\r",
